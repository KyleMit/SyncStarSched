    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\index.js",
            "console": "integratedTerminal",
            "skipFiles": [
                "${workspaceFolder}/nodeApp/node_modules/**/*.js",
                "${workspaceFolder}/lib/**/*.js",
                "<node_internals>/**/*.js",
                "<node_internals>/**",
                "<node_internals>/internal/async_hooks.js"
            ],
        }
    ]
}